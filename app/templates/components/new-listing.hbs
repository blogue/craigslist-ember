<h1>New Listing</h1>
    <div class="col-md-12">
      <form>
        <div class="form-group">
          <label for="owner">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="type">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content"}}
        </div>

        <div class="form-group">
         <label for="location">Location</label>
         {{input value=location id="location"}}
       </div>

        <div class="form-group">
         <label for="image">Image</label>
         {{input value=image id="image"}}
       </div>

        <button class="btn btn-xs btn-primary" {{action 'save'}}>Save</button>
      </form>
    </div>
